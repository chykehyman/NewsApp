<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Shadow layers -->
	<item
			android:left="1dp"
			android:right="1dp"
			android:top="3dp">
		<shape>
			<padding
					android:bottom="1.8dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />
			<solid android:color="#e3e3e3" />
		</shape>
	</item>
	<item
			android:left="1dp"
			android:right="1dp"
			android:top="3dp">
		<shape>
			<padding
					android:bottom="1.8dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />
			<solid android:color="#d6d1d1" />
		</shape>
	</item>
	<item
			android:left="1dp"
			android:right="1dp"
			android:top="3dp">
		<shape>
			<padding
					android:bottom="1.8dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />
			<solid android:color="#c3c0c0" />
		</shape>
	</item>
	<item
			android:left="1dp"
			android:right="1dp"
			android:top="3dp">
		<shape>
			<padding
					android:bottom="1.8dp"
					android:left="1dp"
					android:right="1dp"
					android:top="1dp" />
			<solid android:color="#eeeeee" />
		</shape>
	</item>

	<!-- Background layer -->
	<item>
		<shape>
			<solid android:color="@android:color/white" />
			<corners android:radius="0dp" />
		</shape>
	</item>

</layer-list>